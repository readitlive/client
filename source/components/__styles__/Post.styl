
.post
  margin 40px 0

  .meta
    margin-bottom 0
    color #333
    clear both
    font-family  AvenirNext-DemiBold, Helvetica, sans-serif
    font-size 14px

  .meta-time
    margin-bottom 0
    color #666
    font-size 12px

  .avatar-pic
    border-radius 4px

  .body-text
    word-break normal
    word-wrap break-word
    overflow-wrap break-word
    white-space pre-wrap

/*for if the post is a comment*/
.com-bq
  font-size 16px
  border-left 5px solid #aaa
  margin-bottom 8px
  padding 5px 12px

/* for the comments on the event live page */
.comment
  border 1px solid #ccc
  border-radius 8px
  background-color #FFFBFF

/*responsive embedded video*/
.video-container
   position relative
   padding-bottom 56.25%
   padding-top 30px height 0 overflow hidden

.video-container iframe,
.video-container object,
.video-container embed
   position absolute
   top 0
   left 0
   width 100%
   height 100%
