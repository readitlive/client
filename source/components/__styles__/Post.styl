
.post
  padding-bottom 30px

.post-side
  text-align right
  font-size 13px

.post-meta
  margin-bottom 0
  color #333
  clear both
  font-family  AvenirNext-DemiBold, Helvetica, sans-serif
  font-size 14px

.post-meta-time
  margin-bottom 0
  color #666
  font-size 12px

.avatar-pic
  border-radius 4px
  float right

.post-body
  border 1px solid #CCC
  /*border-color #E7E7E7 for pink background*/
  border-radius 8px
  background-color #FFFBFF
  padding-top 12px
  padding-bottom 12px

.post-body-text
  font-family  AvenirNext, Helvetica, sans-serif
  display block
  padding 0
  margin 0
  font-size 16px
  line-height 1.42857143
  color #333
  word-break normal
  word-wrap break-word
  overflow-wrap break-word
  background-color #FFFBFF
  border 0px
  border-radius 0px
  white-space pre-wrap

/*for if the post is a comment*/
.com-bq
  font-size 16px
  border-left 5px solid #aaa
  margin-bottom 8px
  padding 5px 12px

/* for the comments on the event live page */
.comment
  border 1px solid #ccc
  border-radius 8px
  background-color #FFFBFF

@media(max-width 768px)
  .post-side
    padding 0
    font-size 12px
    padding-right 5px

  .posts-container
    margin-top 10px
    padding 0

  .post
    padding 0
    margin-bottom 5px

  .avatar-pic
    border-radius 2px
    float right
    margin-bottom 5px

  .no-padding
    padding 0

  .post-body
    border-radius 3px
    padding 4px 8px

  .post-meta
    font-family  AvenirNext-DemiBold, Helvetica, sans-serif
    font-size 12px
    margin-bottom 0
    color #444
    padding 0
    padding-left 5px

  .post-meta-time
    font-size 10px
    color #666

  .post-body-text
    font-size 14px
    line-height 1.6em
  .com-bq
    font-size 14px
    border-left 3px solid #aaa
    margin-bottom 3px
    padding 4px 4px

/*responsive embedded video*/
.video-container
   position relative
   padding-bottom 56.25%
   padding-top 30px height 0 overflow hidden

.video-container iframe,
.video-container object,
.video-container embed
   position absolute
   top 0
   left 0
   width 100%
   height 100%
