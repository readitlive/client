// Constants
$active-blue = #95bcf2
$okay-green = #0a9e01
$lt-okay-green = #0cae02
$lt-green = #dfd
$off-white = #eef
$dark-gray = #555
$light-gray = #c0c0c0
$seafoam = #75D9B4
$red = #FC4349
$orange = #FFCE4D
$blue = #6DBCDB
$dark-blue = #2C3E50

body
  color: #797979
  background: #f1f2f7
  font-family: 'Open Sans', sans-serif
  padding: 0px
  margin: 0px
  font-size:13px

textarea
  resize: none

pre.form-control
  height:auto
  tab-size: 2

h3
  color: #fff
  display: inline
  padding: 0 10px
  font-size: 20px
  font-weight: 300

ul li
  list-style: none
a, a:hover, a:focus

  text-decoration: none
  outline: none

#app
  max-width: 1200px
  padding: 0 0px

.homeNav
  display: inline-block
  width: 300px
  height: 200px
  font-size: 30px
  line-height: 200px
  text-align: center
  margin-right: 45px
  margin-bottom: 20px
  border: 1px solid black
  border-radius: 20px
  &:hover
    background: $off-white
  &:nth-child(3n)
    margin-right: 0

.adminStep, .accountSettingsStep
  width: 200px
  padding: 5px
  border: 1px solid black
  &.current
    background: $off-white

.adminSteps, .accountSettingsSteps
  display: inline-block
  width: 250px

.admin .primary, .accountSettings .primary
  display:inline-block
  vertical-align: top
  width:700px
  margin: 0 0 0 30px

.admin .topToggle
  width: 600px
  .toggle
    display: inline-block
    margin-bottom: 20px
    width: 298px // (width of topToggle / 2) - border-width adjustment
    border: 1px solid black
    font-size: 20px
    text-align: center
    &.active
      background: $active-blue

.basicInformation, .billing
  position: relative
  width: 450px
  height: 300px
  border: 1px solid black
  border-radius: 5px
  .title
    display: inline-block
    position: absolute
    background: white
    padding: 0 3px
    top: -10px
    left: 10px
  .contents
    padding: 20px 40px
    input, textarea
      width: 180px
    textarea
      min-height: 50px
    label
      display: inline-block
      width: 130px
      vertical-align: top

.basicInformation + .buttons, .billing + .buttons
  width: 450px
  margin-top: 10px

.basicInformation + .buttons > div, .billing + .buttons > div
  display: inline-block
  padding: 5px
  margin-left: 10px
  float: right
  border: 1px solid black
  border-radius: 5px

.buttons .save
  background: $okay-green
  color: white
  &:hover
    background: $lt-okay-green

.planList
  margin: 20px 0 30px

.plan
  display: inline-block
  vertical-align: top
  width: 140px
  margin-right: 10px
  text-align: center
  .shape
    width: 50px
    height: 50px
    border-radius: 10px
    margin: auto
    border: solid 1px black

.newPlanBtn
  display: inline-block
  padding: 2px 10px 2px 5px
  border: 1px solid black
  border-radius: 3px 20px 20px 3px
  &:hover
    background: #efe

#sidenav.sidenav-collapsed {
  margin-left: -190px;
}

#main.sidenav-collapsed {
  margin-left: 0px;
}

.table-options
  display: inline-block
  width: inherit
  height: 23px

.seafoam
  background: $seafoam

.red
  background: $red

.orange
  background: $orange

.blue
  background: $blue


.export-btn
  margin-right: 5px


#container
  width: 100%
  height: 100%

.panel
  border: none

#main
  margin-left: 190px
  .sidenav-collapsed
    margin-left: 0px


#sidenav
  width: 190px
  height: 100%
  position: fixed
  background: $dark-blue
  margin-left: 0px
  .sidenav-collapsed
    margin-left: -190px
  ul li
    position: relative

#sidenav.sidenav-collapsed
  margin-left: -190px

#main.sidenav-collapsed
  margin-left: 0px

.sidenav-toggle
  float: left
  padding-right: 15px
  margin-top: 20px
  color: $dark-gray

.sidenav-toggle *
  cursor: pointer
  display: inline-block
  font-size: 20px

ul.sidenav-menu
  margin: -2px 0 0
  padding: 0
  margin-top: 60px

  li
    margin: -2px 0 0
    padding: 0
    border-bottom: 1px solid #2F4357
    &:hover
      background-color: #374C61
  *
    font-size: 13px
    font-weight: 300
    padding: 0px 5px
  a
    color: #aeb2b7
    text-decoration: none
    display: block
    padding: 15px 0 15px 10px
    font-size: 12px
    outline: none
    span
      display: inline-block

.header
  min-height: 60px
  padding: 0 15px
  position: fixed
  left: 0
  right: 0
  z-index: 999
  background: #fff

.wrapper
  display: inline-block
  margin-top: 65px
  padding: 15px
  width: 100%

a.logo
  font-size: 21px
  color: #2e2e2e
  float: left
  margin-top: 13px
  &:hover, &:focus
    text-decoration: none
    outline: none
  > img
    width: 80%

.nav > li, ul.nav-menu > li
  float: left

.breadcrumb-row
  padding: 5px
  width: 20%
  float: left
  margin-top: 10px

ul.nav-menu > li > a
  color: #666666
  font-size: 16px
  border-radius: 4px
  -webkit-border-radius: 4px
  border:1px solid #f0f0f8
  padding: 2px 6px
  margin-right: 15px
  &:hover, &:focus
    border:1px solid #f0f0f8
    background-color: #fff
    border-color: #f0f0f8
    text-decoration: none
    border-radius: 4px
    -webkit-border-radius: 4px
    color: #2E2E2E

.dropdown-menu
  max-width: 300px
  min-width: 160px
  top: 42px
  width: 235px
  padding: 0
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.176)
  border: none
  border-radius: 4px
  -webkit-border-radius: 4px

@media screen and (-webkit-min-device-pixel-ratio:0)
  /* Safari and Chrome */
  .dropdown-menu
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.176)


.dropdown-toggle *
  margin: 2px 2px

.dropdown-menu
  li a
    border-bottom: 1px solid #EBEBEB
    font-size: 12px
    list-style: none
    padding: 15px 10px
    width: 100%
    display: inline-block
    &:hover
      background-color: #F7F8F9
      color: #2E2E2E
  .logout > li
    float: left
    text-align: center
    width: 33.3%
    &:last-child
      float: left
      text-align: center
      width: 100%
      background: #ff6c60
      border-radius: 0 0 3px 3px
      > a, > a:hover
        color: #fff
        border-bottom: none
        text-transform: uppercase
      > a:hover > i
        color: #fff

  .logout > li > a
    color: #B3B3B3
    border-bottom: none
    i
      font-size: 17px
    &:hover
      background: none
      i
        color: #9B9B9B
    > i
      display: block

.top-nav
  margin-top: 7px
  ul.nav-menu > li .dropdown-menu.logout
    width: 268px
  li.dropdown .dropdown-menu
    float: right
    right: 0
    left: auto
  .username
    font-size: 13px
    color: #555555
  ul.nav-menu > li
    margin-left: 10px
    margin-top: 2px
    > a
      border: 1px solid #eeeeee
      border-radius: 4px
      -webkit-border-radius: 4px
      padding: 8px 10px
      background: none
      margin-right: 0
    &:hover, &:focus
      border:1px solid #F1F2F7
      background: #F1F2F7
    &:hover .caret
      border-bottom-color: #000
      border-top-color: #000
  .dropdown-menu.logout
    top: 50px
  .nav .caret
    border-bottom-color: #A4AABA
    border-top-color: #A4AABA

.log-arrow-up
  background: url("img/arrow-up.png") no-repeat
  width: 20px
  height: 11px
  position: absolute
  right: 20px
  top: -10px

.state-overview .symbol
  display: inline-block
  text-align: center
  width: 30%
  padding: 45px 15px
  -webkit-border-radius: 4px 0px 0px 4px
  border-radius: 4px 0px 0px 4px
  i
    color: #fff
    font-size: 50px

.state-overview .value h1, p, .state-overview .value p // wat?
  margin: 0
  padding-left:10px
  font-weight: 300
  font-size: 30px
  color: #c6cad6

.value
  display: inline-block
  text-align: left
  vertical-align: middle
  margin-top: -25px
  width: 70%

.header-icon
  font-size: 20px
  color: #fff

.panel.pages:hover
  background-color: #F5F5F5

.breadcrumb
  background-color: #fff
  padding: 0 0 0 0
  margin-bottom: 0px

.panel-heading
  border-bottom: 1px solid rgba(0, 0, 0, 0.08)
  display: block
  > span
    color: #fff

.form-horizontal .control-label
  font-weight: 300
  font-size: 14px
  text-align: left

.pointer
  cursor: pointer

.mini-panel
  float: left
  padding: 5px
  margin: 5px
  border: 1px solid $light-gray
  border-radius: 2px

// Need important in order to over-ride browser default hover
.form-input-error {
  border-color: red !important
}

.btn-margin-right
  margin-right: 10px

.width-read
  width: 10%

.width-write
  width: 10%
  padding: 0 0 0 8px !important

.table-cell-input
  border: 0
  padding: 0
  width: 100%
  box-sizing:border-box;
  height: 100%
  // border: 1px solid #ccc

.table-cell-input:focus
  border-color: #66afe9
  outline: 0

